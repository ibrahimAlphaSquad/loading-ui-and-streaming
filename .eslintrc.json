{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended"
  ],
  "plugins": [
    "unused-imports"
  ],
  "rules": {
    "no-duplicate-case": "error", // Disallows duplicate case labels in switch statements
    "no-unused-vars": "error", // Reports variables that are declared but not used anywhere in the code
    "no-func-assign": "error", // Prevents reassigning function declarations
    "unused-imports/no-unused-imports": "error", // Detects and reports any imports that are declared but not used
    "react/jsx-key": "warn", // Ensures that elements in a list have a unique 'key' prop
    "react/button-has-type": "warn", // Ensures that every button element has an explicit 'type' attribute
    "no-console": "warn" // Warns about console statements in the code, useful for cleaning up before production
  }
}